#shop{
  width: 100vw;
  height: 100vh;
  background: url('https://gengxin.odao.com/update/h5/yingyu/common/bg.jpg') 0 0 no-repeat;
  background-size: cover;
  overflow: hidden;
  align-items: flex-start;
}

.wrap{
  width: 710rpx;
  margin-top: 34rpx; 
  flex-wrap: wrap;
  align-content: flex-start;
}

.item{
  width: 214rpx;
  height: 260rpx;
  margin-bottom: 30rpx;
  background: url('https://gengxin.odao.com/update/h5/yingyu/word/item-bg.png') 0 0 no-repeat;
  background-size: cover;
  position: relative;
}

.top{
  width: 100%;
  height: 180rpx;
  align-items: center;
  flex-direction: column;
}

.top text{
  font: bold 30rpx 'Microsoft YaHei';
  -webkit-text-stroke: 1rpx #0070e8;
  color: #fff;
}

.gold{
  letter-spacing: 20rpx;
  padding-left: 20rpx;
}

.box{
  letter-spacing: 6rpx;
  padding-left: 6rpx;
}

.icon{
  width: 149rpx;
  height: 116rpx;
  margin-top: 11rpx;
}

.bottom{
  width: 100%;
  height: 80rpx;
  text-align: center;
}

.bottom text{
  font-size: 36rpx;
  line-height: 72rpx;
}

.goods{
  width: 690rpx;
  height: 516rpx;
  background-color: #fff;
  position: absolute;
  left: 50%;
  top: 325rpx;
  transform: translate(-50%,0);
  z-index: 30;
  border-radius: 30rpx;
}
.goods-info{
  flex-direction: column;
  align-items: center;
  justify-content: flex-start;
}

.goods-icon{
  width: 176rpx;
  height: 176rpx;
  border: 10rpx solid #fff;
  border-radius: 50%;
  margin-top: -100rpx;
  background-color: #19b1ff;
  box-shadow: 0 4rpx rgba(0, 0, 0, 0.2);
}

.goods-icon image{
  width: 149rpx;
  height: 116rpx;
  margin-left: 5rpx;
}

.main-text{
  margin-top: 10rpx;
}

.main-text text{
  color: #19b1ff;
  font-size: 46rpx;
}

.buy{
  margin-top: 28rpx;
}

.ziti text{
  color: #474747;
  font-size: 32rpx;
}

.content{
  text-align: center;
  max-width: 520rpx;
}

.button{
  width: 692rpx;
  height: 159rpx;
  background: url('https://gengxin.odao.com/update/h5/yingyu/word/mianban2.png') 0 0 no-repeat;
  background-size: cover;
  position: absolute;
  bottom: 0;
  align-items: flex-start;
}

.cancel{
  background: url('https://gengxin.odao.com/update/h5/yingyu/word/button-red.png') 0 0 no-repeat;
  margin-left: 40rpx;
}

.confirm{
  background: url('https://gengxin.odao.com/update/h5/yingyu/word/button-green.png') 0 0 no-repeat;
  margin-right: 40rpx;
}

.btn{
  width: 288rpx;
  height: 98rpx;
  background-size: cover;
  text-align: center;
  margin-top: 32rpx;
}

.btn text{
  font-size: 36rpx;
  line-height: 94rpx;
}
.cancel text{
  letter-spacing: 17rpx;
  padding-left: 17rpx;
}

.mask{
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.5);
  position: absolute;
  top: 0;
  left: 0;
  z-index: 10;
}
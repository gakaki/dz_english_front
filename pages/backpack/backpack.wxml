<view class="con-bg f-c-fs con">
  <scroll-view scroll-y class="sv">
    <view class="bp-box f-r-fs">
      <view wx:for="{{backData}}" class="item f-c-fs">
        <text class="desc">{{item.cfg.name}}</text>
        <image class="icon" data-name="{{item.cfg.name}}" data-desc="{{item.cfg.description}}" data-src="{{item.cfg.icon}}" bindtap='showPop' src="https://gengxin.odao.com/update/h5/yingyu/backpack/{{item.cfg.icon}}"></image>
        <view class="flex">
          <text class="x">×</text>
          <text class="count">3</text>
        </view>

      </view>

    </view>
  </scroll-view>
  <view class="award-pop f-r-fs">
    <scroll-view scroll-y class="pop-sv">
    <view class="pop-box f-r-fs">
    <view  class="item f-c-fs">
        <text class="desc">发发</text>
        <image class="icon"  src="https://gengxin.odao.com/update/h5/yingyu/backpack/gold.png"></image>
        <view class="flex">
          <text class="x">×</text>
          <text class="count">3</text>
        </view>

      </view>
    </view>
      

    </scroll-view>
    <view class="button flex">
      <view class=" btn" bindtap='toUse'>
        <text class="font use">确定</text>
      </view>
    </view>
  </view>
  <view class="goods" wx:if="{{show}}">
    <view class="goods-info flex">
      <view class="goods-icon flex">
        <image src="https://gengxin.odao.com/update/h5/yingyu/backpack/{{src}}"></image>
      </view>
      <view class="content">
        <view class="main-text">
          <text class="font">{{name}}</text>
        </view>
        <view class="buy ziti">
          <text class="font">{{desc}}</text>
        </view>
      </view>
    </view>
    <view class="button flex">
      <view class=" btn" bindtap='toUse'>
        <text class="font use">使用</text>
      </view>
    </view>
  </view>
  <view class="mask" bindtap='hidePop' wx:if="{{show || awardShow}}"></view>
</view>
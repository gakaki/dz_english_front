#word{
  width: 100vw;
  height: 100vh;
  background: url('https://gengxin.odao.com/update/h5/yingyu/common/bg.jpg') 0 0 no-repeat;
  background-size: cover;
  overflow: hidden;
}

.wrap{
  width: 690rpx;
  margin-top: 40rpx; 
  flex-wrap: wrap;
  align-content: flex-start;
}

.item{
  width: 204rpx;
  height: 244rpx;
  margin-bottom: 30rpx;
  position: relative;
}

.top{
  width: 100%;
  height: 173rpx;
  background-color: #19b1ff;
  border-top-left-radius: 20rpx;
  border-top-right-radius: 20rpx;
  align-items: center;
}

.icon{
  width: 118rpx;
  height: 136rpx;
}

.bottom{
  width: 100%;
  height: 72rpx;
  background-color: #4670cd;
  border-bottom-left-radius: 20rpx;
  border-bottom-right-radius: 20rpx;
  text-align: center;
}

.bottom text{
  color: #fff;
  font-family: 'Microsoft Yahei';
  font-weight: bold;
  font-size: 36rpx;
  line-height: 70rpx;
  letter-spacing: 11rpx;
  padding-left: 11rpx;
}

.red-point{
  width: 36rpx;
  height: 39rpx;
  position: absolute;
  top: 3rpx;
  right: 4rpx;
}

.addition{
  width: 690rpx;
  height: 840rpx;
  position: absolute;
  top: 127rpx;
  left: 50%;
  transform: translate(-50%,0);
  background-color: #fff;
  border-radius: 30rpx;
  z-index: 20;
}

.introduce{
  width: 690rpx;
  height: 402rpx;
  background: url('https://gengxin.odao.com/update/h5/yingyu/word/mianban.png') 0 0 no-repeat;
  background-size: cover;
  flex-direction: column;
  align-items: center;
  justify-content: flex-start;
  position: relative;
}

.cir-icon{
  width: 229rpx;
  height: 229rpx;
  border: 10rpx solid #fff;
  border-radius: 50%;
  margin-top: -90rpx;
  background-color: #19b1ff;
  box-shadow: 0 4rpx rgba(0, 0, 0, 0.2);
}

.cir-icon image{
  width: 130rpx;
  height: 150rpx;
  margin-top: 35rpx;
}

.left{
  width: 80rpx;
  height: 91rpx;
  position: absolute;
  left: 155rpx;
  top: 25rpx;
}

.right{
  width: 87rpx;
  height: 114rpx;
  position: absolute;
  right: 150rpx;
  top: 14rpx;
}

.cixing{
  width: 288rpx;
  height: 95rpx;
  background: url('https://gengxin.odao.com/update/h5/yingyu/word/piaodai.png') 0 0 no-repeat;
  background-size: cover;
  margin-top: -40rpx;
  text-align: center;
}

.cixing text{
  font-size: 40rpx;
  line-height: 65rpx;
  letter-spacing: 20rpx;
  padding-left: 20rpx;
}

.fun{
  margin-top: 25rpx;
  max-width: 535rpx;
  text-align: center;
}

.fun text{
  font-size: 38rpx;
}

.second{
  margin-top: 10rpx;
}

.add{
  flex-direction: column;
  align-items: center;
  justify-content: flex-start;
}

.tip{
  width: 285rpx;
  height: 66rpx;
  background-color: #526ec6;
  border-radius: 33rpx;
  margin-top: 19rpx;
  text-align: center;
  letter-spacing: 5rpx;
  padding-left: 5rpx;
}

.tip text{
  font-size: 32rpx;
  line-height: 64rpx;
}

.num{
  margin-top: 30rpx;
}

.num text{
  font-size: 36rpx;
  color: #19b1ff; 
}

.cut-off{
  width: 474rpx;
  height: 3rpx;
  margin-top: 20rpx;
}

.cost{
  width: 417rpx;
  margin-top: 14rpx;
}

.max{
  text-align: center;
}

.gold-icon{
  width: 36rpx;
  height: 34rpx;
  vertical-align: middle;
  margin: 0 4rpx;
}

.star-icon{
  width: 34rpx;
  height: 40rpx;
  vertical-align: middle;
  margin: 0 4rpx;
}

.cost text{
  color: #19b1ff;
  font-size: 28rpx;
}

.cost .daoju{
  color: #f2594c;
}

.button{
  width: 692rpx;
  height: 159rpx;
  background: url('https://gengxin.odao.com/update/h5/yingyu/word/mianban2.png') 0 0 no-repeat;
  background-size: cover;
  position: absolute;
  bottom: 0;
}

.cancel{
  background: url('https://gengxin.odao.com/update/h5/yingyu/word/button-red.png') 0 0 no-repeat;
  margin-left: 40rpx;
}

.confirm{
  background: url('https://gengxin.odao.com/update/h5/yingyu/word/button-green.png') 0 0 no-repeat;
  margin-right: 40rpx;
}

.btn{
  width: 288rpx;
  height: 98rpx;
  background-size: cover;
  text-align: center;
  margin-top: 32rpx;
}

.btn text{
  font-size: 36rpx;
  line-height: 94rpx;
}
.cancel text{
  letter-spacing: 17rpx;
  padding-left: 17rpx;
}

.btn-max{
  margin-right: 0;
}

.warn{
  width: 690rpx;
  height: 516rpx;
  background-color: #fff;
  position: absolute;
  left: 50%;
  top: 325rpx;
  transform: translate(-50%,0);
  z-index: 30;
  border-radius: 30rpx;
}

.warn-info{
  flex-direction: column;
  align-items: center;
  justify-content: flex-start;
}

.warn-icon{
  width: 160rpx;
  height: 160rpx;
  border: 10rpx solid #fff;
  border-radius: 50%;
  margin-top: -90rpx;
  background-color: #f35a4d;
  box-shadow: 0 4rpx #ccc;
}

.warn-icon image{
  width: 34rpx;
  height: 112rpx;
  margin-top: 24rpx;
}

.main-text{
  margin-top: 25rpx;
}

.main-text text{
  color: #f35a4d;
  font-size: 46rpx;
}

.buy{
  margin-top: 38rpx;
}

.ziti text{
  color: #474747;
  font-size: 32rpx;
}

.mask{
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.5);
  position: absolute;
  top: 0;
  left: 0;
  z-index: 10;
}

.order{
  z-index: 20;
}
<view id='friend'>
  <view class="pk flex">
    <view class="waiting">
      <text>等待对手加入···</text>
    </view>
    <view class="pk-info f-r-sb">
      <view class="inviter bg">
        <view class="avatar">
          <image class="touxiang" src="{{userInfo.avatarUrl}}"></image>
        </view>
        <view class="name">
          <text>{{userInfo.nickName}}</text>
        </view>
      </view>
      <view class="looker">
        <view class="person">
          <image class="icon" src='https://gengxin.odao.com/update/h5/yingyu/friendPK/person.png'></image>
          <text>围观群众100人</text>
        </view>
      </view> 
      <view class="invitee bg"></view>
    </view>
    <view class="button f-r-sb">
      <view class="btn give-up">
        <text>放弃</text>
      </view>
      <view class="btn invite">
        <text>邀请</text>
      </view>
    </view>
  </view>
</view>

  background-size: cover;
  margin-top: -20rpx;
}

.hong-ziliao{
  width: 245rpx;
  display: flex;
  flex-direction: column;
  top: 812rpx;
  right: 0rpx;
  position: absolute;
}

.hong-touxiang{
  width: 145rpx;
  height: 145rpx;
  border: 5rpx solid #fff;
  border-radius: 50%;
  margin-left: 45rpx;
}

.hong-nicheng{
  align-self: center;
  display: inline-block;

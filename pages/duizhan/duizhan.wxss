/*以下部分为动画*/
@keyframes left {
  0%{
    left: -405rpx;
  }
  100%{
    left: 0;
  }
}

@keyframes right {
  0%{
    right: -405rpx;
  }
  100%{
    right: 0;
  }
}

@keyframes pk {
  0%{
    opacity: 1;
    transform: scale3d(2.5,2.5,2.5);
  }
  100%{
    opacity: 1;
    transform: scale3d(1,1,1);
  }
}

@keyframes opa{
  0%{
    opacity: 0.1;
  }
  100%{
    opacity: 1;
  }
}

  font-size: 40rpx;
}

.lan-dizhi-tu{
  width: 27rpx;
  height: 35rpx;
  vertical-align:middle;
}

.lan-dengji{
  margin-top: 8rpx;
}

.pk{
  width: 100vw;
  height: 218rpx; 
}

.pk-lan{
  width:405rpx;
  height:239rpx;
  left: -405rpx;
  position: absolute;
  top: 494rpx;
  animation: left .3s ease-in forwards; 
}

.pk-lan image{
  width:405rpx;
  height:239rpx;
}

.point{
  width: 8rpx;
  height: 8rpx;
  background-color: #fff;
  border-radius: 50%;
  position: absolute;
  top: 77rpx;
  left: 0;
  animation: lpoint 1s linear infinite; 
  box-shadow: 0 0 2rpx #f00;
}

.pk-hong{
  width:405rpx;
  height:239rpx;
  right: -405rpx;
  position: absolute;
  top: 466rpx;
  animation: right .3s ease-in forwards;
}

.pk-hong image{
  width:405rpx;
  height:239rpx;
}

.pk-tu{
  width:239rpx;
  height:158rpx;
  position: absolute;
  left: 262rpx;
  top: 508rpx;
  perspective: 1000rpx;
  transform: scale3d(2.5,2.5,2.5);
  transform-style: preserve-3d;
  opacity: 0; 
  animation: pk .5s ease-in .5s forwards; 
}

.hong{
  display: flex;
  justify-content: space-between;
}

.hong-shouji{
  margin-top: -20rpx;

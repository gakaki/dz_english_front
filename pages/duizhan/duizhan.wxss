  max-width: 245rpx;
  text-align: center;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
}

/*以下部分为动画*/
@keyframes left {
  0%{
    left: -405rpx;
  }
  100%{
    left: 0;
  }
}

@keyframes right {
  0%{
    right: -405rpx;
  }
  100%{
    right: 0;
  }
}

@keyframes pk {
  0%{
    opacity: 1;
    transform: scale3d(2.5,2.5,2.5);
  }
  100%{
    opacity: 1;
    transform: scale3d(1,1,1);
  }
}

@keyframes lpoint{
  0%{
    left:0;
    top: 77rpx;
  }
  45%{
    left: 135rpx;
    top: 42rpx;
  }
  55%{
    left: 160rpx;
    top: 54rpx;
  }
  65%{
    left: 176rpx;
    top: 80rpx;
  }
  90%{
    left: 190rpx;
    top:124rpx;
  }
  95%{
    left: 210rpx;
    top: 140rpx;
  }
  100%{
    left: 224rpx;
    top: 145rpx;
  } 
}

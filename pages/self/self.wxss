}

.info {
  margin-top: 20rpx;
  width: 100%;
  font-weight: bold;
  font-size: 24rpx;
  color: #526ec6;
}

.info-top, .info-mid {
  width: 574rpx;
  height: 58rpx;
  background-color: #dae2f5;
  border-radius: 30rpx;
  position: relative;
  margin-bottom: 30rpx;
}

.item-left, .item-rgt {
  line-height: 58rpx;
}

.item-mid {
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%);
  display: inline-block;
  width: 3rpx;
  height: 44rpx;
  background-color: #9eb7ee;
}

.item-left {
  margin-left: 40rpx;
}

.item-rgt {
  position: absolute;
  left: 330rpx;
  top: 50%;
  transform: translateY(-50%);
}

.fix-bot {
  position: fixed;
  left: 0;
  bottom: 0;
  width: 100%;
  height: 128rpx;
  background-color: #2890f1;
}

.fix-bot::before {
  content: '';
  position: absolute;
  left: 50%;
  transform: translateX(-50%);
  top: -20rpx;
  width: 122rpx;
  height: 122rpx;
  border-radius: 50%;
  background-color: #2890f1;
}

.share {
  width: 74rpx;
  height: 75rpx;
  position: absolute;
  left: 50%;
  top: -4rpx;
  transform: translateX(-50%);
  z-index: 1;
}

.share-btn {
  position: absolute;
  left: 50%;
  top: -4rpx;
  transform: translateX(-50%);
  width: 74rpx;
  height: 75rpx;
  z-index: 2;
  opacity: 0;
}

.bot-des {
  width: 100%;
  height: 100%;
}

.share-str, .gold {
  z-index: 9;
  align-self: flex-end;
  font-size: 22rpx;
  color: #a0dfff;
  font-weight: bold;
  margin-bottom: 22rpx;
}

.gold {

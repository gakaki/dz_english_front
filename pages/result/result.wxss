/*以下是动画设置····  */

@keyframes left {
  0%{
    margin-left: -337rpx;
  }

  100%{
    margin-left: 0;
  }
}

@keyframes right {
  0%{
    margin-right: -337rpx;
  }

  100%{
    margin-right: 0;
  }
}

@keyframes shuying {
  0%{
    opacity: 1;
    transform: scale3d(1.5,1.5,1.5);
  }
  100%{
    opacity: 1;
    transform: scale3d(1,1,1);
  }
}


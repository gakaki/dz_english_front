<!--pages/competition/competition.wxml-->
<wrap time='{{time}}'>
  <view class='now-word' slot="word">
    <view class='round-title {{showIndex === 0 ? "show" : "none"}}'>第一题</view>
    <view class='word-wrap  {{showIndex > 0 ? "show" : "none"}}'>
      <view class='zhongwen' wx:if='{{word.type === 2}}'>{{word.english}}</view>
      <view class='zhongwen' wx:else=''><text>n.</text>{{word.name}}</view>
      <view class='yinbiao'>
        <text>['aepl]</text>
        <audio  class='loudspeaker' id="myAudio" src='https://fanyi.baidu.com/gettts?lan=uk&spd=3&source=web&text={{word.english}}' bindtap="audioPlay"></audio>
      </view>
      <view class='quelou' wx:if='{{word.type===1 || word.type===4}}'>
        <text class='letter'>a</text>
        <text class='letter {{hideLetter?"hide-word":""}} '>p</text>
        <text class='letter {{hideLetter?"hide-word":""}}'>p</text>
        <text class='letter {{hideLetter?"hide-word":""}}'>l</text>
        <text class='letter {{hideLetter?"hide-word":""}}'>e</text>
      </view>
    </view> 
  </view>

  <view class='multi-words' slot='select'>
    <!-- 九宫格  -->
    <view wx:if='{{word.type === 1 || word.type === 4}}' class='selectBtn flex {{showIndex === 3 || showIndex === 4 ? "show" : "none"}}'>
      <view class='one-word {{bgIndex[0] ? "one-word-active":""}}' bindtouchstart='changeBgColor' data-index="{{0}}" style='color:{{letters[0].color}};background:{{letters[0].bgColor}}'>
         <view hidden='{{back}}'>
          <text>{{words[0]}}</text>
          <image wx:if='{{letters[0].type === 1}}' class='true-icon' src='https://gengxin.odao.com/update/h5/yingyu/competition/true.png'></image>
          <image wx:if='{{letters[0].type === 2}}' class='err-icon' src='https://gengxin.odao.com/update/h5/yingyu/competition/err.png'></image>
        </view>  
        <view class='back' hidden='{{!back}}' bindtap='showFront'>
          <image class='back-img' src='https://gengxin.odao.com/update/h5/yingyu/competition/back.png'></image>
        </view>
      </view>
      <view class='one-word {{bgIndex[1] ? "one-word-active":""}}' bindtouchstart='changeBgColor' data-index="{{1}}" style='color:{{letters[1].color}};background:{{letters[1].bgColor}}'>
        <view hidden='{{back}}'>
          <text>{{words[1]}}</text>
          <image wx:if='{{letters[0].type === 1}}' class='true-icon' src='https://gengxin.odao.com/update/h5/yingyu/competition/true.png'></image>
          <image wx:if='{{letters[0].type === 2}}' class='err-icon' src='https://gengxin.odao.com/update/h5/yingyu/competition/err.png'></image>
        </view> 
        <view class='back' hidden='{{!back}}'>
          <image class='back-img' src='https://gengxin.odao.com/update/h5/yingyu/competition/back.png'></image>
        </view>
      </view>
      <view class='one-word {{bgIndex[2] ? "one-word-active":""}}' bindtap='changeBgColor' data-index="{{2}}" style='color:{{letters[2].color}};background:{{letters[2].bgColor}}'>
        <view hidden='{{back}}'>
          <text>{{words[2]}}</text>
          <image wx:if='{{letters[0].type === 1}}' class='true-icon' src='https://gengxin.odao.com/update/h5/yingyu/competition/true.png'></image>
          <image wx:if='{{letters[0].type === 2}}' class='err-icon' src='https://gengxin.odao.com/update/h5/yingyu/competition/err.png'></image>
        </view> 
        <view class='back' hidden='{{!back}}'>
          <image class='back-img' src='https://gengxin.odao.com/update/h5/yingyu/competition/back.png'></image>
        </view>
      </view>
     
    </view>
    <!-- 列表  -->
    <view class='selectBtn' wx:if='{{word.type === 2}}'>
      <view class='one-select' wx:for='{{word.select}}' wx:key='{{index}}'>{{item}}</view>
    </view>
  </view>


</wrap>

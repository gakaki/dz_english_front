<!--pages/competition/competition.wxml-->
<wrap time='{{time}}'>
  <view class='now-word' slot="word">
    <view class='round-title {{showIndex === 0 ? "show" : "none"}}'>第一题</view>
    <view class='word-wrap  {{showIndex > 0 ? "show" : "none"}}'>
      <view class='zhongwen' wx:if='{{word.type === 2}}'>{{word.english}}</view>
      <view class='zhongwen' wx:else=''><text>n.</text>{{word.name}}</view>
      <view class='yinbiao'>
        <text>['aepl]</text>
        <audio  class='loudspeaker' id="myAudio" src='https://fanyi.baidu.com/gettts?lan=uk&spd=3&source=web&text={{word.english}}' bindtap="audioPlay"></audio>
      </view>
      <view class='quelou' wx:if='{{word.type===1 || word.type===4}}'>
        <text class='letter {{hideLetters[index]?"hide-word":""}}' wx:for='{{letters}}' wx:key='{{index}}' >{{item}}</text>
      </view>
    </view> 
  </view>

  <view class='multi-words' slot='select'>
    <!-- 九宫格翻转  -->
    <view wx:if='{{word.type === 1}}' class='selectBtn {{showIndex === 3 || showIndex === 4 ? "show" : "none"}}'>
      <view class='one-word' wx:for='{{words}}' wx:key='{{index}}' data-index="{{index}}" style='color:{{letters[index].color}};background:{{letters[index].bgColor}}'>
        <view class='flip-wrap'  style='transform:rotateY({{backAll? "180deg": "0"}}); transform:rotateY({{rotateList[index]? "0": "180deg"}})'>
          <view class='front flip poal'>
            <text>{{words[index]}}</text>
          </view>  
          <view class='back flip poal' bindtap='showFront' data-index='{{index}}' data-inner='{{item}}'>
            <image class='back-img' src='https://gengxin.odao.com/update/h5/yingyu/competition/back.png'></image>
          </view>
        </view>
      </view>
    </view>

    <!--九宫格键盘  -->
    <view wx:if='{{word.type === 4}}' class='selectBtn {{showIndex === 3 || showIndex === 4 ? "show" : "none"}}'>
      <view class='one-word {{bgIndex[index] ? "one-word-active":""}}' wx:for='{{words}}' wx:key='{{index}}' bindtouchstart='changeBgColor' data-index="{{index}}" style='color:{{letters[index].color}};background:{{letters[index].bgColor}}'>
        <view class='flip-wrap'>
          <view class='front flip poal'>
            <text>{{words[index]}}</text>
          </view>  
          <view class='back flip poal' bindtap='showFront' data-index='{{index}}'>
            <image class='back-img' src='https://gengxin.odao.com/update/h5/yingyu/competition/back.png'></image>
          </view>
        </view>
      </view>
    </view>

    <!-- 列表  -->
    <view class='selectBtn {{showIndex > 1 ? "show" : "none"}}' wx:if='{{word.type === 2}}'>
      <view class='one-select' wx:for='{{word.select}}' wx:key='{{index}}'>
        <text>{{item}}</text>
        <image wx:if='{{letters[index].type === 1}}' class='true-icon' src='https://gengxin.odao.com/update/h5/yingyu/competition/true.png'></image>
        <image wx:if='{{letters[index].type === 2}}' class='err-icon' src='https://gengxin.odao.com/update/h5/yingyu/competition/err.png'></image>
      </view>
    </view>
  </view>
</wrap>

<!--pages/competition/competition.wxml-->
<wrap time='{{clockCount}}'>
  <view class='now-word' slot="word">
    <view class='round-title {{showIndex === 0 ? "show" : "none"}}'>{{title}}</view>
    <view class='word-wrap  {{showIndex > 0 ? "show" : "none"}}'>
      <view class='zhongwen' wx:if='{{word.type === 2}}'>{{word.english}}</view>
      <view class='zhongwen' wx:else=''><text>{{word.speech}}.</text>{{word.China}}</view>
      <view class='yinbiao'>
        <text>{{word.yinbiao}}</text>
        <audio  class='loudspeaker' id="myAudio" src='https://fanyi.baidu.com/gettts?lan=uk&spd=3&source=web&text={{word.english}}' bindtap="audioPlay"></audio>
      </view>
      <view class='quelou' wx:if='{{word.type===1 || word.type===4}}'>
          <text class='letter {{hideLetters[index] || hideAllLetters?"hide-word":""}}' wx:for='{{letters}}' wx:key='{{index}}' >{{item}}</text>
          <image class='true-word-icon' wx:if='{{answer === 1}}' src='https://gengxin.odao.com/update/h5/yingyu/competition/true.png'></image> 
          <image class='false-word-icon' wx:if='{{answer === 2}}' src='https://gengxin.odao.com/update/h5/yingyu/competition/err.png'></image>
          <text class='letter' wx:if='{{answer === 2}}'>{{word.english}}</text>
        </view>
    </view> 
  </view>

  <view class='multi-words' slot='select'>
    <!-- 九宫格翻转  -->
    <view wx:if='{{word.type === 1}}' class='selectBtn {{showIndex === 3 || showIndex === 4 ? "show" : "none"}}'>
      <view class='one-word' wx:for='{{nineLetters}}' wx:key='{{index}}' data-index="{{index}}" style='color:{{letters[index].color}};background:{{letters[index].bgColor}}'>
          <view class='flip-wrap' style='transform:rotateY({{rotateList[index]? "0": "180deg"}})'> 
          <view class='front flip poal'>
            <text>{{nineLetters[index]}}</text>
          </view>  
          <view class='back flip poal' bindtap='showFront' data-index='{{index}}' data-inner='{{item}}'>
            <image class='back-img' src='https://gengxin.odao.com/update/h5/yingyu/competition/back.png'></image>
          </view>
        </view>
      </view>
    </view>

    <!--九宫格键盘  -->
    <view wx:if='{{word.type === 4}}' class='selectBtn {{showIndex === 3 || showIndex === 4 ? "show" : "none"}}'>
      <view class='one-word {{bgIndex[index] ? "one-word-active":""}}' wx:for='{{nineLetters}}' wx:key='{{index}}' bindtouchstart='changeBgColor' data-index="{{index}}" style='color:{{letters[index].color}};background:{{letters[index].bgColor}}'>
        <view class='flip-wrap'>
          <view class='front flip poal'>
            <text>{{nineLetters[index]}}</text>
          </view>  
          <view class='back flip poal' bindtap='showFront' data-index='{{index}}'>
            <image class='back-img' src='https://gengxin.odao.com/update/h5/yingyu/competition/back.png'></image>
          </view>
        </view>
      </view>
    </view>

    <!-- 列表  -->
    <view wx:if='{{word.type === 2 || word.type === 3}}' class='selectBtn selectLists {{showIndex > 1 ? "show" : "none"}}'>
      <view class='one-select ' wx:for='{{word.options}}' wx:key='{{index}}' bindtap='selectAnswer' data-answer='{{item}}' data-id='{{index}}'>
        <text>{{item}}</text>
        <image wx:if='{{letters[index].type === 1}}' class='true-icon' src='https://gengxin.odao.com/update/h5/yingyu/competition/true.png'></image>
        <image wx:if='{{letters[index].type === 2}}' class='err-icon' src='https://gengxin.odao.com/update/h5/yingyu/competition/err.png'></image>
      </view>
    </view>
  </view>
</wrap>

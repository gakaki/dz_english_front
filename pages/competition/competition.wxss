/* pages/competition/competition.wxss */
.poal {
  position: absolute;
  left: 0;
  top: 0;
}
.now-word {
  position: relative;
  margin: 0 60rpx 0;
  border: 10rpx solid #19b1ff;
  border-radius: 40rpx;
  width: 610rpx;
  height: 230rpx;
  font: bold 32rpx/1 'Microsoft YaHei';
  color: #4b65b7;
  text-align: center;
  box-shadow: 0rpx 4rpx 4rpx #007be3;
  background: #fff;
}
.round-title {
  position: absolute;
  width: 100%;
  height: 100%;
  font: bold 46rpx/210rpx 'Microsoft YaHei';
}
.word-wrap {
  position: absolute;
  width: 100%;
  height: 100%;
}
.loudspeaker {
  vertical-align: middle;
  margin-left: 10rpx;
  width: 32rpx;
  height: 31rpx;
  background: url("https://gengxin.odao.com/update/h5/yingyu/competition/loudspeaker.png") no-repeat;
  background-size: cover;
}
.question {
  position: relative;
  display: inline-block;
  transition: 0.5s;
}

.question-large {
  color: #ff4263;
  transform: translateX(-15rpx)
}
.zhongwen {
  padding-top: 39rpx;
}
.yinbiao {
  padding-top: 26rpx;
  font: 32rpx/1 'Arial';
}
.quelou {
  justify-content: center;
  padding-top: 20rpx;
  font: bold 46rpx/1 'Arial';
}
.false-word-icon {
  position: absolute;
  top: 10rpx;
  right: -43rpx;
  width: 34rpx;
  height: 36rpx;
}
.true-word-icon {
  position: absolute;
  top: 0;
  right: -62rpx;
  width: 51rpx;
  height: 41rpx;
}

.error-letter {
  background: #ff4263;
}

.letter {
  display: inline-block;
  margin: 0 1rpx;
  text-align: center;
  min-width: 24rpx;
  height: 49rpx;
  transition: 1s;
}
.letters {
  margin-left: 50rpx;
}

.hide-word {
  color: rgba(255, 255, 255, 0);
  border-bottom: 3rpx solid #4b65b7;
}
.multi-wrap {
  display: flex;
  width: 100%;
}
.multi-words {
  flex: 1;
  display: flex;
  margin-top: 70rpx;
  height: 580rpx;
  width: 494rpx;
  color: #4b65b7;
}

.selectBtn {
  display: flex;
  justify-content: space-between;
  align-items: center;
  align-content: space-around;
  flex-wrap: wrap;
  width: 520rpx;
  height: 100%;
  overflow: hidden;
}
.selectLists {
  justify-content: center;
}
.one-word {
  position: relative;
  display: flex;
  justify-content: center;
  align-items: center;
  width: 160rpx;
  height: 160rpx;
  font: bold 72rpx 'Microsoft YaHei';
  border-radius: 20rpx;
  perspective: 1000rpx;
}
.flip-wrap {
  transform-style:preserve-3d;
  width: 100%;
  height: 100%;
}
.flip {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 100%;
  height: 100%;
  box-shadow: 0rpx 2rpx 2rpx #7ab1cd;
  border-radius: 20rpx;
  backface-visibility:hidden;
}
.transition {
  transition: 1s;
}
.front {
  background: #fff;
}
.back {
  transform:rotateY(180deg);
}

.back-img {
  width: 168rpx;
  height: 170rpx;
}


.one-select {
  width: 500rpx;
  height: 123rpx;
  border-radius: 50rpx;
  text-align: center;
  line-height: 123rpx;
  font: bold 44rpx/123rpx 'Microsoft YaHei';
  background: #fff;
}

.true {
  color: #fff;
  background: #19b1ff;
}
.false {
  color: #fff;
  background: #ff4263;
}

.show {
  transition: 1s;
  opacity: 1;
}
.none {
  opacity: 0;
  transition: 0;
}

.start-mc {
  position: absolute;
  top: 320rpx;
  left: 50vw;
  transform: translate(-50%, -50%);
}

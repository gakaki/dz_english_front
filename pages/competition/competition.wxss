/* pages/competition/competition.wxss */
.poal {
  position: absolute;
  left: 0;
  top: 0;
}
.now-word {
  position: relative;
  display: flex;
  flex-direction: column;
  margin: -13rpx 60rpx 0;
  border: 10rpx solid #19b1ff;
  border-radius: 40rpx;
  width: 610rpx;
  height: 210rpx;
  font: bold 32rpx/1 'Microsoft YaHei';
  color: #4b65b7;
  text-align: center;
  box-shadow: 2rpx 2rpx 2rpx #007be3;
  background: #fff;
}
.round-title {
  position: absolute;
  width: 100%;
  height: 100%;
  font-size: 46rpx; 
  line-height: 210rpx;
}
.word-wrap {
  position: absolute;
  width: 100%;
  height: 100%;
}
.loudspeaker {
  vertical-align: middle;
  margin-left: 10rpx;
  width: 32rpx;
  height: 31rpx;
  background: url("https://gengxin.odao.com/update/h5/yingyu/competition/loudspeaker.png") no-repeat;
  background-size: cover;
}
.zhongwen {
  padding-top: 36rpx;
}
.yinbiao {
  padding-top: 20rpx;
}
.quelou {
  padding-top: 20rpx;
  font-size: 46rpx;
}

.multi-words {
  display: flex;
  height: 652rpx;
  color: #4b65b7;
}

.selectBtn {
  display: flex;
  justify-content: space-between;
  align-items: center;
  align-content: space-around;
  flex-wrap: wrap;
  width: 100%;
  height: 100%;
}
.one-word {
  position: relative;
  display: flex;
  justify-content: center;
  align-items: center;
  width: 167rpx;
  height: 167rpx;
  font: bold 72rpx 'Microsoft YaHei';
  border-radius: 20rpx;
  perspective: 1000rpx;
}
.flip-wrap {
  transform-style:preserve-3d;
  transition:1s;
  width: 100%;
  height: 100%;
}
.flip {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 100%;
  height: 100%;
  transition: 1s;
  box-shadow: 0rpx 2rpx 2rpx #7ab1cd;
  border-radius: 20rpx;
  backface-visibility:hidden;
}
.front {
  background: #fff;
}
.back {
  transform:rotateY(180deg);
}

.true-icon {
  position: absolute;
  right: 8rpx;
  bottom: 10rpx;
  width: 60rpx;
  height: 44rpx;
}
.err-icon {
  position: absolute;
  right: 10rpx;
  bottom: 12rpx;
  width: 44rpx;
  height: 44rpx;
}

.back-img {
  width: 168rpx;
  height: 170rpx;
}
.one-word-active {
  background: #cdeeff;
}

.one-select {
  width: 500rpx;
  height: 123rpx;
  border-radius: 50rpx;
  text-align: center;
  line-height: 123rpx;
  font: bold 44rpx/123rpx 'Microsoft YaHei';
  background: #fff;
}

.error-letter {
  background: #ff4263;
}
.letter {
  display: inline-block;
  text-align: center;
  width: 24rpx;
  height: 49rpx;
  margin-right: 5rpx;
}
.hide-word {
  border-bottom: 3rpx solid #4b65b7;
  color: rgba(255, 255, 255, 0);
  transition: 1s;
}
.show {
  transition: 1s;
  opacity: 1;
}
.none {
  opacity: 0;
  transition: 0;
}

/* pages/competition/competition.wxss */
.now-word {
  display: flex;
  flex-direction: column;
  margin: -13rpx 60rpx 0;
  border: 10rpx solid #19b1ff;
  border-radius: 40rpx;
  width: 610rpx;
  height: 210rpx;
  font: bold 32rpx/1 'Microsoft YaHei';
  color: #4b65b7;
  text-align: center;
  box-shadow: 2rpx 2rpx 2rpx #007be3;
  background: #fff;
}
.round-title {
  font-size: 46rpx; 
  line-height: 210rpx;
}
.loudspeaker {
  width: 32rpx;
  height: 31rpx;
  background: url("https://gengxin.odao.com/update/h5/yingyu/competition/loudspeaker.png") no-repeat;
  background-size: cover;
}
.zhongwen {
  padding-top: 36rpx;
}
.yinbiao {
  padding-top: 20rpx;
}
.quelou {
  padding-top: 20rpx;
  font-size: 46rpx;
}

.multi-words {
  flex: 1;
  color: #4b65b7;
}
.nine-letters {
  display: flex;
  justify-content: space-between;
  align-content: space-around;
  flex-wrap: wrap;
  width: 100%;
  height: 100%;
}
.one-word {
  position: relative;
  display: flex;
  justify-content: center;
  align-items: center;
  width: 167rpx;
  height: 167rpx;
  font: bold 72rpx 'Microsoft YaHei';
  border-radius: 20rpx;
  box-shadow: 0rpx 2rpx 2rpx #7ab1cd;
  background: #fff;
}
.true-icon {
  position: absolute;
  right: 8rpx;
  bottom: 10rpx;
  width: 60rpx;
  height: 44rpx;
}
.err-icon {
  position: absolute;
  right: 10rpx;
  bottom: 12rpx;
  width: 44rpx;
  height: 44rpx;
}
.one-word-active {
  background: #cdeeff;
}
.error-letter {
  background: #ff4263;
}
.letter {
  display: inline-block;
  text-align: center;
  width: 24rpx;
  height: 49rpx;
  margin-right: 5rpx;
}
.hide-word {
  border-bottom: 3rpx solid #4b65b7;
}

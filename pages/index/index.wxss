/**index.wxss**/

.container {
  width: 100vw;
  height: 100vh;
  background: url('https://gengxin.odao.com/update/h5/yingyu/common/bg.jpg') 0 0 no-repeat;
  background-size: cover;
  overflow: hidden;
}

.bg {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 235rpx;
}

.userInfo {
  position: relative;
  margin-top: 20rpx;
  width: 100%;
  height: 128rpx;
}

.header {
  width: 128rpx;
  height: 128rpx;
  box-sizing: border-box;
  border: 5rpx solid #0673d7;
  border-radius: 50%;
  margin: 0 14rpx 0 20rpx;
}

.userinfo-avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  box-sizing: border-box;
  border: 4rpx solid #fff;
}

.info {
  height: 100%;
  color: #fff;
  flex-grow: 2;
}

.nn,.lv {
  font-size: 32rpx;
  font-family: 'Microsoft YaHei';
  align-self: flex-start;
}

.lvl {
  font-size: 28rpx;
  font-weight: bold;
  font-family: 'Microsoft YaHei';
  display: inline-block;
  height: 30rpx;
}

.lvl-box {
  position: relative;
  width: 180rpx;
  height: 30rpx;
  background-color: #09579f;
  margin-left: 10rpx;
  border-radius: 15rpx;
}

 .percent-box text {
  position: absolute;
  left: 50%;
  top:0;
  transform: translateX(-50%);
  line-height: 30rpx;
  height: 30rpx;
  vertical-align: middle;
  font-size: 24rpx;
  font-weight: bold;
  color: #fff;
} 

.percent-box {
  width: 176rpx;
  height: 26rpx;
  margin: 2rpx;
  overflow: hidden;
}

.percent-bg {
  width: 140rpx;
  height: 100%;
  background-color: #ffa800;
  border-radius: 13rpx;
}

.share-box {
  align-self: flex-start;
  position: relative;
  width: 44rpx;
  height: 44rpx;
  margin-right: 42rpx;
}

.share {
  width: 100%;
  height: 100%;
}

.share-btn {
  position: absolute;
  right: 0;
  top: 0;
  width: 44rpx;
  height: 44rpx;
  z-index: 2;
  opacity: 0;
}

.match-bg {
  margin-top: 84rpx;
  width: 712rpx;
  height: 267rpx;
}

.duizhan-bg {
  width: 712rpx;
  height: 281rpx;
  margin-top: 6rpx;
}

.tab {
  flex-wrap: wrap;
  padding: 0 20rpx;
  margin-top: 30rpx;
}

.tab image {
  width: 220rpx;
  height: 167rpx;
  margin-bottom: 30rpx;
}

.c-box {
  position: relative;
  width: 220rpx;
  height: 167rpx;
  margin-bottom: 30rpx;
}
.customer {
  margin-bottom: 0
}
.contact {
  position: absolute;
  left: 0;
  top: 0;
  z-index: 2;
  width: 220rpx;
  height: 167rpx;
  opacity: 0;
}

/* components/scoreBar/bar.wxss */

.wrap {
  width: 98rpx;
  height: 100%;
  text-align: center;
  overflow: hidden;
}

.score-content {
  display: inline-block;
  height: 70rpx;
  color: #007be3;
  font: bold 40rpx/70rpx 'Microsoft YaHei';
}

.progress-wrap {
  margin: 0 30rpx;
  box-sizing: content-box;
  width: 24rpx;
  height: 580rpx;
   /* padding-left: 1rpx;
   padding-right: 1rpx; */
  background: #5d88b2;
  border: 5rpx solid rgba(255, 255, 255, 0.5);
  border-radius: 20rpx;
  overflow: hidden;
  position: relative;
}

/* .progress {
  position: relative;
  width: 100%;
  height: 100%;
  overflow: hidden;
} */

.score {
  position: absolute;
  left: 0;
  bottom: 0;
  width: 22rpx;
  border-radius: 12rpx;
  transition: height 0.5s;
  background: #69e604;
}

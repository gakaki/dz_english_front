/* components/scoreBar/bar.wxss */

.wrap {
  width: 98rpx;
  height: 100%;
  text-align: center;
  overflow: hidden;
}

.score-content {
  display: inline-block;
  height: 70rpx;
  color: #007be3;
  font: bold 40rpx/70rpx 'Microsoft YaHei';
}

.progress-wrap {
  margin: 0 30rpx;
  width: 24rpx;
  height: 580rpx;
  
   padding: 1rpx; 
  background: #5d88b2;
  border: 5rpx solid rgba(255, 255, 255, 0.5);
  border-radius: 20rpx;
  overflow: hidden;
  
}

.progress {
  position: relative;
  width: 100%;
  height: 100%;
  overflow: hidden;
}

.score {
  position: absolute;
  left: 0;
  bottom: 0;
  width: 24rpx;
  border-radius: 12rpx;
   /* border-top-left-radius: 12rpx;
  border-top-right-radius: 12rpx;
  border-bottom-left-radius: 0;
  border-bottom-right-radius: 0;  */
  transition: height 0.5s;
  background: #69e604;
}

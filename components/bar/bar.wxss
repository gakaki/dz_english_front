/* components/scoreBar/bar.wxss */
.wrap {
  width: 28rpx;
  height: 648rpx; 
  border: 6rpx solid rgba(255, 255, 255, 0.5);
  padding: 2rpx;
  background: #5d88b2;
  overflow: hidden;
  border-radius: 50rpx;
}
.progress {
  position: relative;
  width: 100%;
  height: 100%;
}
.score {
  position: absolute;
  left: 0;
  bottom: 0;
  width: 28rpx;
  border-radius: 50rpx;
  background: linear-gradient(#dbff37, #93e700)
}